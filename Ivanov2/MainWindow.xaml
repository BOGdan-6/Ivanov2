<Window x:Class="Ivanov2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ivanov2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#123bac">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button Click="b1_Click" Name="b1" Margin="5" Height="50" Width="80" Content="Задание 1"/>
            <Button Click="b2_Click" Name="b2" Margin="5" Height="50" Width="80" Content="Задание 2"/>
            <Button Click="b3_Click" Name="b3" Margin="5" Height="50" Width="80" Content="Задание 3"/>
        </StackPanel>
        <Frame x:Name="MyFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
